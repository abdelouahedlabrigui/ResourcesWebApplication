@model ResourcesWebApplication.Models.News.NewsArticle

@{
    ViewData["Title"] = "Create";
}

<div class="">
    <div class="card">
        <div class="card-header bg-dark text-white">
            <h4 class="form-control-plaintext text-white">Save an article from a newspaper.</h4>
        </div>
        <div class="card-body">
            <div class="">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control-plaintext" spellcheck="false" autocomplete="off" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Url" class="control-label"></label>
                        <input asp-for="Url" class="form-control-plaintext" spellcheck="false" autocomplete="off" />
                        <span asp-validation-for="Url" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CreatedAt" class="control-label"></label>
                        <input type="datetime" asp-for="CreatedAt" class="form-control-plaintext" readonly value="@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss.fff")" spellcheck="false" autocomplete="off" />
                        <span asp-validation-for="CreatedAt" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-dark text-white btn-lg btn-block" />
                    </div>
                </form>
            </div>
        </div>
        <div class="card-footer bg-dark text-white">
            <strong class="form-control-plaintext text-white">@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss.fff")</strong> | <a class="text-white" asp-action="Index">Back to List</a>
        </div>
    </div>
</div>

<script>
    function setCreateAT()
    {
        var createdATInput = document.getElementById('CreatedAT');
        var currentDate = new Date();
        createdATInput.value = currentDate.toISOString();
    }
    setCreateAT();
</script>