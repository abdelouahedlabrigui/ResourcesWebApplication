@model ResourcesWebApplication.Models.Prompts.Prompt

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Prompt</h4>
<hr />
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" autocomplete="off" class="form-control-plaintext bg-light text-dark" spellcheck="false"  />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Message" class="control-label"></label>
        <textarea asp-for="Message" cols="30" rows="7" class="form-control-plaintext" spellcheck="false" class="form-control-plaintext bg-light text-dark" 
            
        ></textarea>
        <span asp-validation-for="Message" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CreatedAT" class="control-label"></label>
        <input asp-for="CreatedAT" readonly class="form-control-plaintext bg-light text-dark"  />
        <span asp-validation-for="CreatedAT" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
<div>
    <a asp-action="Index">Back to List</a>
</div>

<script>
    function setCreateAT()
    {
        var createdATInput = document.getElementById('CreatedAT');
        var currentDate = new Date();
        createdATInput.value = currentDate.toISOString();
    }
    setCreateAT();
</script>