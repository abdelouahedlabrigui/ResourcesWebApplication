@model IEnumerable<ResourcesWebApplication.Models.Endpoints.EndpointMetadata>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a> | <strong> <a asp-action="Download" class="lead bg-dark text-white">Download Datasets.</a></strong>  | <strong> <a asp-action="WebPage" class="lead bg-dark text-white">Web Pages.</a></strong>
</p>
<table class="table table-light table-hover" id="tableID">
    <thead class="thead text-white" style="background-color: #810c47;">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ControllerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ActionName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HttpMethod)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RouteTemplate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ControllerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HttpMethod)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RouteTemplate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
