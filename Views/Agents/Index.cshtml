            <td>
                <a asp-action="Details" class="badge bg-primary text-white" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" class="badge bg-primary text-white" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
