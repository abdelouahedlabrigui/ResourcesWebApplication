<script>
    function deleteLinuxAgent()
    {
        const agentId = document.getElementById('agentId');
        if(agentId)
        {
            fetch(`/Agents/DeleteLinuxAgent?id=${encodeURIComponent(agentId.value)}`)
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    else if(response.ok)
                    {
                        return response.json();
                    }
                })
                .then(data => {
                    @* console.log(data); *@
                    window.location.href = '/Agents/LinuxAgents';
                })
                .catch(error => {
                    console.error('There was a problem with your fetch operation:', error);
                });
        }
    }
</script>